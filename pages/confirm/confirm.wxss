page {
  background: #f2f2f2;
}

.bottom {
  width: 100%;
  background: white;
  height: 40pt;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 13pt;
}

.bl {
  width: 70%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.br {
  width: 30%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  background: linear-gradient(to right, #20c8f5, #0fa4f6);
  align-items: center;
  color: white;
}

.top {
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 80pt;
  font-size: 11pt;
  color: #333;
  margin-bottom: 0.5%;
}

.tl {
  width: 70pt;
  height: 90%;
  padding: 5%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.tl image {
  width: 60pt;
  height: 60pt;
}

.tr {
  width: calc(100% - 70pt);
  height: calc(100% - 20pt);
  padding: 10pt 5% 10pt 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.trb {
  width: 100%;
  display: flex;
