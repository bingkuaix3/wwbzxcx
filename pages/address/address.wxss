/* pages/address/address.wxss */
page{
  background: #f2f2f2;
}
.button{
  position: fixed;
  bottom: 10%;
  width: 80%;
  left: 10%;
  height: 35pt;
  background: linear-gradient(to right, #20c8f5, #0fa4f6);
  color:white;
  border-radius: 5pt;
  text-align: center;
  line-height: 35pt;
}
.address{
  width: 90%;
  padding: 5%;
  font-size: 12pt;
  color: #333333;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background: white;
  margin-top: 1%;
}
.addressicon{
  width: 10%;
  height: 100%;
}
.addresscontent{
  width: 80%;
}
.f{
  align-self: flex-start;
}
.f image{
  width: 15pt;
  height: 20pt;
}
.acv{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.name{
  margin-right: 10pt;
}
.area{
  color: #999999;
  margin-top: 10pt;
}
.icon{
  width: 10pt;
  height: 10pt;
}
.default{
  color:#e85621;
  background:#fdf0e5;
  padding: 2pt 4pt;
  font-size: 10pt;
}