/* pages/reply/reply.wxss */
page{
  background: #f2f2f2;
}
.comment{
  font-size: 11pt;
}
.ct{
  width: 90%;
  padding: 2% 5%;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  
}
.comv{
  margin-top: 2pt;
}
.wxicon{
  width: 30pt;
  height: 30pt;
  border-radius: 50%;margin-right: 10pt;
}
.time{
  color: #999;
  align-self: flex-start;
}
.ctl{
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  align-items: center;
}
.cbv{
  width: 90%;
  background: white;
  padding: 0 5% 2% 5%;
  text-align: justify;
}
.star_icon{
  width:10pt;
}
.reply{
  color:#fe5455;
}
.rp{
  width: calc(90% - 40pt);
  background: white;
  padding: 0 5% 2% calc(5% + 40pt);
  text-align: justify;
}
.ctr{
    width: 90%;
  padding: 1% 5%;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.bottom{
  position: absolute;
  bottom:0;
  width: 90%;
  padding: 2% 5%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.bottom image{
  width: 35pt;
  height: 35pt;
  flex-shrink: 0;
  margin-left: 5%;
}
input{
  background: white;
  width: 100%;
  height: 30pt;
  border-radius: 15pt;
  padding: 0 5%;
  font-size: 12pt;
}