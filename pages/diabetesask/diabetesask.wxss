/* pages/diabetesask/diabetesask.wxss */
.unit{
  width: 100%;
  padding-bottom: 1%;
  border-bottom: 1pt solid #eee;
}
.question{
  width: 90%;
  padding: 2% 5%;
}
.radio{
  color: #666;
  padding: 1% 5%;
  font-size: 12pt;
  width: 90%;
}
.radio-group{
  width: 90%;
  padding: 0 5%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
radio{
  float: right
}
.button{
  width: 70%;
  background: linear-gradient(to right, #20c8f5, #0fa4f6);
  height: 30pt;
  line-height: 30pt;
  text-align: center;
  color: white;
  border-radius: 5pt;
  margin: 15pt 15%;

}